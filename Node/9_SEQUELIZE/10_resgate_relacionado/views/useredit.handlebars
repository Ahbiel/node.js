<h1>Editando: {{user.name}} </h1>
<form action="/users/update" method="POST">
  <input type="hidden" name="id" value="{{user.id}}" />
  <div>
    <label for="name">Nome:</label>
    <input
      type="text"
      name="name"
      placeholder="Digite o seu nome"
      value="{{user.name}}"
    />
  </div>
  <div>
    <label for="occupation">Profissão:</label>
    <input
      type="text"
      name="occupation"
      placeholder="Digite sua profissão"
      value="{{user.occupation}}"
    />
  </div>
  <div>
    {{#if user.newsletter}}
      <input type="checkbox" name="newsletter" checked />
    {{else }}
      <input type="checkbox" name="newsletter" />
    {{/if}}
    <label for="newsletter">Enviar promoções?</label>
  </div>
  <input type="submit" value="Editar" />
</form>
<div>
  <h2>Endereços:</h2>
  <form action="/address/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}"> {{!-- o "name" precisa ser igual a colua criada dentro do banco de dados "address" --}}
    <div>
      <label for="street">Rua:</label>
      <input type="text" name="street" placeholder="Digite o nome da rua">
    </div>
        <div>
      <label for="number">Número:</label>
      <input type="text" name="number" placeholder="Digite o número da residência">
    </div>
        <div>
      <label for="city">Cidade:</label>
      <input type="text" name="city" placeholder="Digite o nome da cidade">
    </div>
    <input type="submit" value="Incluir endereço">
  </form>
    <h2>Lista de endereços:</h2>
  <div class="address-list" style="display: flex; align-items: center; gap:20px;">
    {{#each user.Addresses}}
      <div>
        #{{this.id}} - 
        {{this.street}}- 
        {{this.number}} - 
        {{this.city}} 
        <form action="/address/delete" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <input type="submit" value="Excluir">
        </form>
      </div>
    {{/each}}
  </div>
</div>